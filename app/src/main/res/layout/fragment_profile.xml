<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nkosi.roger.cefupsacademy.ProfileFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="125dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/anushka"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/lightgrey"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/primaryFontColor"
                    android:text="Loading ..."
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/secondaryFontColor"
                    android:text="Loading ..."
                    android:id="@+id/profile_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_bottom"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_grade"
                    android:textSize="17dp"
                    android:textColor="@color/secondaryFontColor"
                    android:text="Loading ..."
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/secondaryFontColor"
                    android:layout_marginTop="5dp"
                    android:text="Loading ..."
                    android:layout_marginLeft="8dp"
                    android:id="@+id/profile_dream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/secondaryFontColor"
                    android:layout_marginTop="5dp"
                    android:text="Loading ..."
                    android:id="@+id/place"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/secondaryFontColor"
                    android:layout_marginTop="5dp"
                    android:text="Loading ..."
                    android:layout_marginLeft="8dp"
                    android:id="@+id/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/secondaryFontColor"
                    android:layout_marginTop="5dp"
                    android:text="Loading ..."
                    android:layout_marginLeft="8dp"
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="17dp"
                    android:id="@+id/profile_contact_no"
                    android:textColor="@color/secondaryFontColor"
                    android:layout_marginTop="8dp"
                    android:text="Loading ..."
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
